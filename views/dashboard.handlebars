<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blog Post:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">blog title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                <label for="blog-content">content:</label>
                <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>



    {{#if blogPosts.length}}
    <div class="col-md-6 blog-list">
        <h3>Dashboard:</h3>

        {{#each blogPosts as |blogPost|}}
        <div class="blog-post">
            <div class="card text-bg-dark mb-3 m-2" style="max-width: 80%">
                <h5 class="card-header text-bg-dark mb-3"><a href="/project/{{blogPost.id}}">{{blogPost.title}}</a>
                </h5>

                <div class="card-body text-bg-light mb-3">
                    <p class="card-text">{{blogPost.content}}</p>
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-danger" data-id="{{blogPost.id}}">DELETE</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/dashboard.js"></script>