<!-- Loop over each object in the blogPosts array -->
{{#each blogPosts as |blogPost| }}
<div class="blog-post">
    <div class="card text-bg-dark mb-3 m-2" style="max-width: 80%">
        <h5 class="card-header text-bg-dark mb-3">{{title}} -- Posted on: {{date_created}} by: {{user.name}}</h5>
        <div class="card-body text-bg-light mb-3">
            <p class="card-text">{{content}}</p>
        </div>
    </div>
</div>
{{/each}}