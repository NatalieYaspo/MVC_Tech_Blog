{{!-- Log-in as a returning user. --}}
<div class="container login">

    <div class="card text-bg-dark mb-3 m-2" style="max-width: 40%">
        <h3 class="card-header text-bg-dark mb-3">Login</h3>

        <div class="card-body text-bg-light mb-3">
            <form class="form login-form">
                <div class="form-group m-2">
                    <label for="email-login" class="col-6 form-label">email:</label>
                    <div>
                        <input class="form-input" type="email" id="email-login" />
                    </div>
                </div>
                <div class="form-group m-2">
                    <label for="password-login" class="col-6 form-label">password:</label>
                    <div>
                        <input class="form-input" type="password" id="password-login" />
                    </div>

                </div>
                <button class="btn btn-primary" type="submit">login</button>
            </form>
        </div>
    </div>

</div>

{{!-- Sign up as a new user --}}
<div class="container signup">

    <div class="card text-bg-dark mb-3 m-2" style="max-width: 40%">
        <h3 class="card-header text-bg-dark mb-3">New User Signup</h3>

        <div class="card-body text-bg-light mb-3">
            <form class="form signup-form">
                <div class="form-group row m-2">
                    <label for="name-signup" class="col-6 form-label">name:</label>
                    <div>
                        <input class="form-input" type="text" id="name-signup" />
                    </div>
                </div>
                <div class="form-group row m-2">
                    <label for="email-signup" class="col-6 form-label">email:</label>
                    <div>
                        <input class="form-input" type="email" id="email-signup" />
                    </div>
                </div>
                <div class="form-group row m-2">
                    <label for="password-signup" class="col-6 form-label">password:</label>
                    <div>
                        <input class="form-input" type="password" id="password-signup" />
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">signup</button>
            </form>
        </div>
    </div>

</div>

<script src="./js/login.js"></script>