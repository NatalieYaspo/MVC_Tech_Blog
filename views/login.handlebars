<div class="row">
    <div class="col-md-6 m-4">
        <h2>Login</h2>

        <form class="form login-form">
            <div class="form-group row mb-3">
                <label for="email-login" class="col-sm-2 col-form-label">email:</label>
                <input class="form-input" type="email" id="email-login" />
            </div>
            <div class="form-group row mb-3">
                <label for="password-login" class="col-sm-2 col-form-label">password:</label>
                 <div class="col-sm-10"></div>
                    <input class="form-input" type="password" id="password-login" />
                 </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">login</button>
            </div>
        </form>
    </div>

    <div class="col-md-6 m-4">
        <h2>Signup</h2>
        <form class="form signup-form">
            <div class="form-group row mb-3">
                <label for="name-signup">name:</label>
                <input class="form-input" type="text" id="name-signup" />
            </div>
            <div class="form-group row mb-3">
                <label for="email-signup" class="col-sm-2 col-form-label">email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-input" id="email-signup">
                </div>
            </div>
            <div class="form-group row mb-3">
                <label for="password-signup" class="col-sm-2 col-form-label">password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-input" id="password-signup">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">signup</button>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>