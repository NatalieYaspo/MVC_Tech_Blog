{{!-- Rendering the blog post and it's information --}}
<div class="blog-post blog-list">
    <div class="card text-bg-dark mb-3 m-2" style="max-width: 80%">
        <h5 class="card-header text-bg-dark mb-3">{{title}}
            <div class="text-end fs-6">Posted on: {{format_date date_created}} by: {{user.name}}</div>
        </h5>

        <div class="card-body text-bg-light mb-3">
            <p class="card-text">{{content}}</p>
        </div>
    </div>
</div>

{{!-- form to update a post --}}
{{#if event}}
<div class="container update hide">

    <div class="card text-bg-secondary mb-3 m-2" style="max-width: 80%">
        <h5 class="card-header text-bg-secondary mb-3">UPDATE Blog</h5>

        <div class="card-body text-bg-light mb-3">
            <form class="form update-form">
                <div class="card-body text-bg-light mb-4">
                    <div class="form-group m-2">
                        <label class="form-label" for="blog-title">blog title:</label>
                        <input class="form-input col-8" type="text" id="blog-title" name="blog-title" />
                    </div>
                    <div class="form-group m-2">
                        <label class="form-label" for="blog-content">content:</label>
                        <textarea class="form-input col-8" id="blog-content" name="blog-content"></textarea>
                    </div>
                    <div class="form-group m-2">
                        <button type="submit" class="btn btn-primary" data-id="{{id}}">Submit Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
{{/if}}